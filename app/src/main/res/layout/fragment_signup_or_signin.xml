        <TextView
            android:id="@+id/txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or Login with"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/signup_btn"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/google_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/google_img"
            android:clickable="true"
            android:background="@drawable/circular_img"
            android:layout_marginTop="20dp"
            android:layout_marginStart="75dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt"
            android:focusable="true" />
        <ImageView
            android:id="@+id/facebook_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/facebook_img"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/circular_img"
            app:layout_constraintStart_toEndOf="@id/google_btn"
            app:layout_constraintEnd_toStartOf="@id/twitter_btn"
            app:layout_constraintTop_toBottomOf="@id/txt"
            android:focusable="true" />
        <ImageView
            android:id="@+id/twitter_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/twitter_img"
            android:clickable="true"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="75dp"
            android:background="@drawable/circular_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/txt"
            android:focusable="true" />

